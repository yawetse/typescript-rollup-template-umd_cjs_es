{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./build",
    "outDir": "./build",
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": false,
    "jsx": "react"
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "**/*.test.ts",
  ]
}
